{
  "compilerOptions": {
    "types": [
      "bun-types"
    ],
    "outDir": "dist",
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "skipLibCheck": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "verbatimModuleSyntax": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*",
    "scripts/anticheat"
  ],
}