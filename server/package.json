{
  "name": "backyard_monsters_server",
  "version": "1.0.0",
  "description": " ",
  "main": "dist/server.ts",
  "scripts": {
    "compile-sass": "sass --no-source-map --watch styles/main.scss public/main.css",
    "build": "rimraf dist && npx tsc",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "preserve": "npm run build",
    "serve": "concurrently \"npx tsc -w\" \"npm run compile-sass\" \"nodemon dist/server.js\"",
    "migration:create": "npm run build && mikro-orm migration:create",
    "migration:up": "mikro-orm migration:create",
    "db:init": "npm run build && mikro-orm migration:create && mikro-orm schema:create -r"
  },
  "author": "React-X-",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@mikro-orm/core": "^5.7.12",
    "@mikro-orm/sqlite": "^5.7.12",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-morgan": "^1.0.1",
    "koa-session": "^6.4.0",
    "koa-static": "^5.0.0",
    "pino": "^8.12.0",
    "pino-pretty": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.7.12",
    "@mikro-orm/migrations": "^5.7.12",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa": "^2.13.8",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa-session": "^6.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^18.15.11",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "rimraf": "^4.4.1",
    "sass": "^1.62.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./dist/mikro-orm.config.js",
      "./src/mikro-orm.config.ts"
    ]
  }
}
