{
  "name": "backyard_monsters_refitted",
  "version": "1.1.18",
  "description": "The Backyard Monsters preservation project.",
  "author": "React1-X",
  "license": "GPL-3.0-only",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "db:init": "(bunx mikro-orm schema:create -r || echo 'Schema already exists, continuing...') && bunx mikro-orm migration:up",
    "db:seed": "bun src/seed.ts",
    "db:drop": "bunx mikro-orm schema:drop --drop-db -r",
    "migration:up": "bunx mikro-orm migration:up",
    "typecheck": "bunx tsc --noEmit"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@koa/router": "13.1.0",
    "@logtape/logtape": "1.3.6",
    "@logtape/pretty": "^1.3.6",
    "@mikro-orm/core": "5.9.8",
    "@mikro-orm/postgresql": "^5.9.8",
    "alea": "^1.0.1",
    "bad-words": "^4.0.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "9.0.2",
    "koa": "2.16.1",
    "koa-bodyparser": "^4.4.1",
    "koa-morgan": "^1.0.1",
    "koa-static": "^5.0.0",
    "koa2-ratelimit": "^1.1.3",
    "nodemailer": "6.10.1",
    "redis": "4.7.0",
    "reflect-metadata": "0.2.2",
    "simplex-noise": "4.0.3",
    "uuid": "11.1.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.7.12",
    "@mikro-orm/migrations": "^5.7.12",
    "@types/bcrypt": "5.0.2",
    "@types/jsonwebtoken": "9.0.9",
    "@types/koa": "2.15.0",
    "@types/koa__router": "12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-morgan": "1.0.8",
    "@types/koa-static": "4.0.4",
    "@types/nodemailer": "6.4.17",
    "@types/uuid": "10.0.0",
    "typescript": "5.8.3"
  },
  "mikro-orm": {
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  }
}
