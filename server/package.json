{
  "name": "backyard_monsters_refitted",
  "version": "1.1.18",
  "description": "The Backyard Monsters preservation project.",
  "author": "React1-X",
  "license": "GPL-3.0-only",
  "main": "dist/server.js",
  "scripts": {
    "build": "rimraf dist && npx tsc ",
    "start": "node dist/server.js",
    "preserve": "npm run build",
    "serve": "concurrently \"npx tsc -w\" \"npm run compile-sass\" \"nodemon dist/server.js\"",
    "db:init": "npm run build && mikro-orm migration:create && mikro-orm schema:create -r",
    "db:seed": "ts-node src/seed.ts",
    "db:drop": "mikro-orm schema:drop --drop-db -r",
    "migration:create": "npm run build && mikro-orm migration:create",
    "migration:up": "npm run build && mikro-orm migration:up",
    "compile-sass": "sass --no-source-map --watch styles/main.scss public/main.css"
  },
  "dependencies": {
    "@koa/router": "13.1.0",
    "@mikro-orm/core": "5.9.8",
    "@mikro-orm/mariadb": "5.9.8",
    "alea": "^1.0.1",
    "bad-words": "^4.0.0",
    "bcrypt": "^5.1.1",
    "chalk": "5.4.1",
    "dotenv": "16.5.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "2.16.1",
    "koa-bodyparser": "^4.4.1",
    "koa-morgan": "^1.0.1",
    "koa-static": "^5.0.0",
    "koa2-ratelimit": "^1.1.3",
    "nodemailer": "6.10.1",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "redis": "4.7.0",
    "reflect-metadata": "0.2.2",
    "simplex-noise": "4.0.3",
    "uuid": "11.1.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.7.12",
    "@mikro-orm/migrations": "^5.7.12",
    "@types/bcrypt": "5.0.2",
    "@types/jsonwebtoken": "9.0.9",
    "@types/koa": "2.15.0",
    "@types/koa__router": "12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-morgan": "1.0.8",
    "@types/koa-static": "4.0.4",
    "@types/node": "22.14.1",
    "@types/nodemailer": "6.4.17",
    "@types/uuid": "10.0.0",
    "concurrently": "9.1.2",
    "nodemon": "3.1.9",
    "rimraf": "6.0.1",
    "sass": "1.86.3",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./dist/mikro-orm.config.js",
      "./src/mikro-orm.config.ts"
    ]
  }
}