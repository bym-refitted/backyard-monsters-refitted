{
  "name": "backyard_monsters_server",
  "version": "1.0.0",
  "description": " ",
  "main": "dist/server.js",
  "scripts": {
    "compile-sass": "sass --no-source-map --watch styles/main.scss public/main.css",
    "build": "rimraf dist && npx tsc ",
    "start": "node dist/server.js",
    "preserve": "npm run build",
    "serve": "concurrently \"npx tsc -w\" \"npm run compile-sass\" \"nodemon dist/server.js\"",
    "migration:create": "npm run build && mikro-orm migration:create",
    "migration:up": "npm run build && mikro-orm migration:up",
    "db:init": "npm run build && mikro-orm migration:create && mikro-orm schema:create -r",
    "db:seed": "ts-node src/seed.ts",
    "db:drop": "mikro-orm schema:drop --drop-db -r",
    "anticheat:worker": "ts-node scripts/anticheat/manual/worker.ts"
  },
  "author": "React-X-",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^12.0.1",
    "@mikro-orm/core": "^5.7.12",
    "@mikro-orm/mariadb": "5.9.7",
    "alea": "^1.0.1",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-morgan": "^1.0.1",
    "koa-static": "^5.0.0",
    "nodemailer": "^6.9.15",
    "octokit": "^3.1.2",
    "pino": "^8.12.0",
    "pino-pretty": "^10.0.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.1.13",
    "simplex-noise": "4.0.3",
    "uuid": "^10.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.7.12",
    "@mikro-orm/migrations": "^5.7.12",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/koa": "^2.13.8",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-morgan": "^1.0.8",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^18.19.68",
    "@types/nodemailer": "^6.4.16",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "rimraf": "^4.4.1",
    "sass": "^1.62.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./dist/mikro-orm.config.js",
      "./src/mikro-orm.config.ts"
    ]
  }
}
