{
  "name": "backyard_monsters_server",
  "version": "1.0.0",
  "description": " ",
  "main": "dist/server.ts",
  "scripts": {
    "compile-sass": "sass --no-source-map --watch styles/main.scss public/main.css",
    "build": "rimraf dist && npx tsc",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "preserve": "npm run build",
    "serve": "concurrently \"npx tsc -w\" \"npm run compile-sass\" \"nodemon dist/server.js\"",
    "migration:create": "mikro-orm migration:create",
    "migration:up": "mikro-orm migration:create",
    "db:init": "mikro-orm migration:create && mikro-orm schema:create -r"
  },
  "author": "React-X-",
  "license": "ISC",
  "dependencies": {
    "@mikro-orm/core": "^5.7.12",
    "@mikro-orm/sqlite": "^5.7.12",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pino": "^8.12.0",
    "pino-pretty": "^10.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.7.12",
    "@mikro-orm/migrations": "^5.7.12",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "concurrently": "^8.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22",
    "rimraf": "^4.4.1",
    "sass": "^1.62.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./dist/mikro-orm.config.js",
      "./src/mikro-orm.config.ts"
    ]
  }
}
